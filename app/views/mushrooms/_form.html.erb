<%= simple_form_for @mushroom do |f| %>
    <%= f.input :name %>
    <%= f.input :content %>
    <%= f.input :location, collection: Mushroom::LOCATIONS %>

    <%= f.input :cap, collection: Mushroom::CAP %>

    <% f.object.new_record? %>
      <div class="checkbox">
        <label>
          <%= f.check_box :eatable %> Comestible
        </label>
      </div>
      <br>
      <%= f.input :photo, as: :file %>
      <br>
    <%= f.button :submit, class: 'btn btn-flat' %>
<% end %>
